/* pages/detail/childComponents/x-comment-info/x-comment-info.wxss */

.comment-info {
  padding: 10rpx;
  border-bottom: 20rpx solid #f2f2f2;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom:20rpx;
}

.title-left {
  display: flex;
  align-items: center;
}

.liner {
  width: 10rpx;
  height: 30rpx;
  margin-right: 10rpx;
  background: linear-gradient(-45deg, #ff5777, #ffff);
}

.ueser {
  margin: 20rpx 0;
}

.user image {
  width: 84rpx;
  height: 84rpx;
  margin-right: 10rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.desc {
  text-indent: 2em;
}

.other-info {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: #b9b9b9;
}

.time {
  margin-right: 20rpx;
}

.picture {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.picture image {
  max-width: 30%;
}