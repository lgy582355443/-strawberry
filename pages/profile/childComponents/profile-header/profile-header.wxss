/* pages/profile/childComponents/profile-header/profile-header.wxss */

.header {
  display: flex;
  background: #ff5777;
  height: 170rpx;
  padding: 12rpx 30rpx;
  color: #fff;
}

.avatar image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background: #f2f2f2;
  vertical-align: middle;
}

.login-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  vertical-align: middle;
  margin-left: 30rpx;
}

.login-info .login {
  font-size: 36rpx;
  text-align: left;
  margin: 0;
  padding: 0;
  line-height: 1;
  color: #fff;
  background-color: #ff5777;
}

.login::after {
  border: none;
}

.user-name {
  font-size: 36rpx;
}

.login-info .phone {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.phone image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.arrow {
  margin-top: 30rpx;
}

.arrow image {
  width: 60rpx;
  height: 60rpx;
}
